include ../_include/meta
include ../_include/variables

-
  var bodyClasses = [];
  var titleChild = '';
  var pageID = '';
  var lev = 0;
  var pathToRoot = '';
  var lev1ID = '';
  var ogUrl = '';

block vars

-
  title = titleChild ? titleChild + ' | ' + meta.titleBase : meta.titleBase;
  bodyClasses.push(lev1ID);
  for(let i = 0; i < lev; i++){
    pathToRoot += '../';
  }
  var pathToAssets = pathToRoot + 'assets/';
  var pathToJS = pathToAssets + 'js/';
  var pathToCSS = pathToAssets + 'css/';
  var pathToLibs = pathToAssets + 'libs/';
  var pathToSVG = pathToAssets + 'images/svg/';
  var pathToCommon = pathToAssets + 'images/common/';
  var pathToImgAboutMe = pathToAssets + 'images/about-me/';
  var pathToImgWorks = pathToAssets + 'images/works/';
  var pathToImgLG = pathToAssets + 'images/lg/';
  var pathToImgMD = pathToAssets + 'images/md/';
  var pathToImgSM = pathToAssets + 'images/sm/';

doctype html
html(lang="ja", xmlns:og="http://ogp.me/ns#")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="format-detection", content="telephone=no")
    meta(name="viewport", content="width=device-width,initial-scale=1.0,minimum-scale=1.0")
    meta(name="description", content=`${meta.description}`)
    meta(name="keywords", content="")
    include ../_include/googlefont.html
    link(href=`${pathToLibs}html5reset.css`, rel="stylesheet", type="text/css")
    link(href=`${pathToCSS}main.css${hash}`, rel="stylesheet", type="text/css")
    block links

    meta(property="og:title", content="Takatsu Yuki portfolio site")
    meta(property="og:description", content="高津由輝の就職活動用のポートフォリオサイトです。")
    meta(property="og:type", content="website")
    meta(property="og:url", content=ogUrl || "https://portfolio.yutonosite.com/")
    link(rel="icon", href=`${pathToCommon}icon.ico`, sizes="16x16")
    link(rel="icon", href=`${pathToCommon}icon.ico`, sizes="32x32")
    link(rel="apple-touch-icon", href=`${pathToCommon}icon.ico`, sizes="180x180")
    title= title
  body(class=bodyClasses)
    include ../_include/header
    main
      block main
    include ../_include/footer
    block scripts
